
<span class="text-3xl p-5">Plan databases</span>

<div class="m-5">
  <% @tables.each do |table| %>
    <div class="w-4/12 rounded-2xl shadow-lg lg:shadow-2xl bg-white p-4 m-5">
      <div class="text-2xl">
        <%= table.table_name %>
      </div>

      <div class="flex">
        <div class="w-8/12 border-2 text-xl">
          Column:
        </div>
        <div class="w-4/12 border-2">
          Type:
        </div>
      </div>

      <% table.fields.each do |field| %>
        <div class="flex">
          <div class="w-8/12 border-2">
            <%= field[:name] %>
          </div>
          <div class="w-4/12 border-2">
            <%= field[:type] %>
          </div>
        </div>
      <% end %>
    </div>

  <% end %>
</div>